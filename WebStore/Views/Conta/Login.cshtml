@model LoginViewModel

<div class="row loginForm">
    <h2 class="loginHead">Por favor faça login antes de fazer uma compra.</h2>
    <div class="col-md-4 col-md-offset-4">
        <form asp-controller="Conta" asp-action="Login" method="post" class="form-horizontal" role="form">
            <h4>Preencha seus detalhes abaixo</h4>
            <hr />
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="UserName" class="sr-only"></label>
                <div class="col-md-12">
                    <input asp-for="UserName" class="form-control" placeholder="Username" required autofocus />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="sr-only"></label>
                <div class="col-md-12">
                    <input asp-for="Password" class="form-control" placeholder="Password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox" value="remember-me"> Lembrar de mim
                </label>
            </div>

            <div class="form-group pull-right formPullRightButton">
                <div class="col-md-offset-3 col-md-12">
                    <input type="submit" class="btn btn-success" value="Log in" />
                </div>
            </div>
        </form>
    </div>
</div>